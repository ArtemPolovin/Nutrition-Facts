<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="groceryfood"
            type="com.example.nutritionfacts.ui.models.GroceryFood" />

    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_grocery_food"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{groceryfood.image}" />

            <TextView
                android:id="@+id/text_grocery_food_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@{groceryfood.foodName}"
                android:textColor="@color/primary_black_color"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/image_grocery_food"
                app:layout_constraintTop_toTopOf="@+id/image_grocery_food" />

            <TextView
                android:id="@+id/grocery_food_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@{groceryfood.brandName + `,`}"
               app:layout_constraintBottom_toBottomOf="@id/layout_constrain"
                app:layout_constraintStart_toStartOf="@+id/text_grocery_food_name"
                app:layout_constraintTop_toBottomOf="@+id/text_grocery_food_name"/>

            <TextView
                android:id="@+id/grocery_food_serving_size_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:text="@{groceryfood.servingSize}"
                app:layout_constraintBottom_toBottomOf="@+id/grocery_food_brand_name"
                app:layout_constraintStart_toEndOf="@+id/grocery_food_brand_name" />

            <TextView
                android:id="@+id/grocery_food_serving_size_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:text="@{groceryfood.servingSizeLabel}"
                app:layout_constraintBottom_toBottomOf="@+id/grocery_food_serving_size_quantity"
                app:layout_constraintStart_toEndOf="@+id/grocery_food_serving_size_quantity" />

            <TextView
                android:id="@+id/grocery_food_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:text="@{groceryfood.servingSizeCalories}"
                android:textColor="@color/toolbar_background"
                app:layout_constraintEnd_toEndOf="@id/layout_constrain"
                app:layout_constraintTop_toTopOf="@id/layout_constrain" />

            <TextView
                android:id="@+id/grocery_food_calories_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cal"
                app:layout_constraintEnd_toEndOf="@id/grocery_food_calories"
                app:layout_constraintStart_toStartOf="@+id/grocery_food_calories"
                app:layout_constraintTop_toBottomOf="@id/grocery_food_calories" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>